<% include ../partials/header %>

<% if(series.length === 0){ %>
   <h1 class="ui center aligned header">Nekas netika atrasts...</h1>
<% } else{ %>
<h1 class="ui center aligned header">Atrasti sekojoši rezultāti...</h1>
<% } %>
  <div class="ui four special stackable cards">
    <% series.forEach(function(item){ %>

      <div class="card">
        <div class="blurring dimmable image">
          <div class="ui dimmer">
            <div class="content">
              <div class="center">
                <a href="/series/<%= item.show.id %>" class="ui inverted button">Apskatīt</a>
              </div>
            </div>
          </div>
          <% if(item.show.image){ %>
          <img src="<%=item.show.image.medium %>">
          <% } %>
        </div>
        <div class="content">

          <a href="/series/<%= item.show.id %>" class="header">
            <%=item.show.name %>
          </a>

          <div class="meta">
            <a href="http://www.imdb.com/title/<%=item.show.externals.imdb %>">IMDB Links</a>
          </div>
          <div class="description">
            <%-item.show.summary.substr(0,150) %>
            <%if(item.show.summary.length > 150){%>
              ...
            <%}%>

            <p>
                <strong>Žanri: </strong><%= item.show.genres.join(", ") %>
            </p>
          </div>
        </div>
        <div class="extra content">
          <span class="right floated">
            <% if(item.show.status === "Running"){ %>
              Episodes iznāk: <%=item.show.schedule.days %>
            <% } else { %>
              <strong>Šovs ir BEIDZIES</strong>
            <% } %>
          </span>
        </div>
      </div>

      <% }); %>

</div>


<script>
$('.special.cards .image').dimmer({
on: 'hover'
});
</script>
<% include ../partials/footer %>


